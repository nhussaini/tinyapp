    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div class="login">
        <% if (username) { %>
          <!-- <h5>Logged In As: <%= username %></h5> -->
          <form method="POST" action="/Logout" class="form-inline my-2 my-lg-0">
            <label style="font-size:large; font-weight: bold;">Logged In As: <%= username %>!</label>
          <button style="color: black; font-weight: bold; border: 1px solid black; margin-left:5px ;" class="btn btn-success" type="submit">Logout</button>
          </form>
        <% } else{ %> 

        <form method="POST" action="/login" class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="text" placeholder="Username" name="username">
          <button style="color: black; font-weight: bold; border: 1px solid black;" class="btn btn-success" type="submit">Login</button>
        </form>
        <% } %>
      </div>
    </div>
